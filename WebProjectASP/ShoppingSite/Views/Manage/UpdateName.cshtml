@model ShoppingSite.Models.EditUserNameViewModel
@{
    ViewBag.Title = "Update name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("UpdateName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Update name</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
	<input type="hidden" name="UserID" id="UserID" value="@Model.UserID" />
    <div class="form-group">
		<label for="FirstName" class="col-md-2 control-label">First name</label>
        <div class="col-md-10">
			<input type="text" class="form-control" name="FirstName" id="FirstName" value="@Model.FirstName" pattern="[A-Za-z]{2,}" required/>
        </div>
    </div>
	<div class="form-group">
		<label for="LastName" class="col-md-2 control-label">Last name</label>
		<div class="col-md-10">
			<input type="text" class="form-control" name="LastName" id="LastName" value="@Model.LastName" pattern="[A-Za-z]{2,}" required />
		</div>
	</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

