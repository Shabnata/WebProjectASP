@model ShoppingSite.Models.BrandModel

@{
	ViewBag.Title = "Delete brand";
	Layout = (ViewBag.LayoutFile != null) ? ViewBag.LayoutFile : Layout;
}

<h3>Are you sure you want to delete this?</h3>

<div class="page-header">
    <h2>Delete brand</h2>
</div>
<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-8 ">
        <div class="row">
            @Html.LabelFor(model => model.BrandID, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.BrandID)
            </div>

        </div>
        <div class="row">
            @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.BrandName)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.Country)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.Description)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.FoundationYear, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Model.FoundationYear.Year
            </div>
        </div>
        <div class="row">
            @{ShoppingSite.Models.ProductModel[] products = Model.Products.ToArray();
            }
            @Html.Label("Products", "Products", htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                <ul>
                    @for (int item = 0; item < products.Count(); item++) {
                        <li>@products[item].ProductName</li>
                    }
                </ul>
            </div>
        </div> <!-- row -->
        @using (Html.BeginForm("Delete", "Brands", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" })) {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.BrandID)



            <div class="btn-group">
                @Html.ActionLink("Back to Index", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>}
    </div> <!-- left column -->
    <div class="col-md-4">
        @Html.Label("Logo", htmlAttributes: new { @class = "col-md-4" })
        <img src="@Html.DisplayFor(Model => Model.Logo)" alt="@Model.BrandName" style="max-height: 100px; max-width:100px; border: 0px solid;" />
    </div> <!-- right column -->
</div> <!-- row -->






@section Scripts{
	<script type="text/javascript">
		$(function () {
			$("#tabs").tabs();
		});
	</script>
}
