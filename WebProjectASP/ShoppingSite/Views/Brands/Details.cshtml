@model ShoppingSite.Models.BrandModel
@{
	ViewBag.Title = "Brand details";
	Layout = (ViewBag.LayoutFile != null) ? ViewBag.LayoutFile : Layout;
}
<div class="col-md-12">
	<h2>Brand details</h2>
	<hr />
</div>
<div class="row">
	<div class="col-md-10">
		<div class="row">
			@Html.DisplayNameFor(Model => Model.BrandID) :
			@Html.DisplayFor(Model => Model.BrandID)
		</div>
		<div class="row">
			@Html.DisplayNameFor(model => model.BrandName):
			@Html.DisplayFor(model => model.BrandName)
		</div>
		<div class="row">
			@Html.DisplayNameFor(model => model.Country):
			@Html.DisplayFor(model => model.Country)
		</div>
		<div class="row">
			@Html.DisplayNameFor(model => model.Description):
			@Html.DisplayFor(model => model.Description)
		</div>
		<div class="row">
			@Html.DisplayNameFor(model => model.FoundationYear):
			@Model.FoundationYear.Year
		</div>

		<div class="row">
			@{
				decimal itemsPerTab = 10;
				decimal productsCount = Model.Products.Count;
				ShoppingSite.Models.ProductModel[] products = Model.Products.ToArray();
				decimal numberOfTabs = decimal.Ceiling(productsCount / itemsPerTab);
			}
			Products: <br />
			<div id="tabs">
				<ul>
					@for(ushort tab = 1; tab <= numberOfTabs; tab++) {
						<li><a href="#tabs-@tab">Page: @tab</a></li>
					}
				</ul>
				@for(ushort tab = 0; tab < numberOfTabs; tab++) {
					<div id="tabs-@tab">
						<ul>
							@for(ushort item = 0; item < itemsPerTab && (productsCount > ((tab * itemsPerTab) + item)); item++) {
								<li>@products[decimal.ToInt16((tab * itemsPerTab) + item)].ProductName</li>
							}
						</ul>
					</div>
				}
			</div> <!-- tabs -->
		</div> <!-- row -->

	</div> <!-- left column -->

	<div class="col-md-2">
		<img src=@Html.DisplayFor(Model => Model.Logo) alt="@Model.BrandName" style="max-height: 100%; max-width:100%; border: 1px solid;" />
	</div> <!-- right column -->

</div> <!-- row -->
<div class="col-md-12">
	@Html.ActionLink("Delete", "Delete", new { BrandID = Model.BrandID }) |
	@Html.ActionLink("Edit", "Edit", new { BrandID = Model.BrandID }) |
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts{
	<script type="text/javascript">
		$(function () {
			$("#tabs").tabs();
		});
	</script>

}
