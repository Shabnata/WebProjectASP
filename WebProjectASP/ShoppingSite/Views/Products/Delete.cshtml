@model ShoppingSite.Models.ProductModel

@{
	ViewBag.Title = "Delete product";
	Layout = (ViewBag.LayoutFile != null) ? ViewBag.LayoutFile : Layout;
}


<div class="page-header">
    <h2>Delete product</h2>
</div>
<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6 ">
        <div class="row">
            @Html.LabelFor(model => model.SKU, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.SKU)
            </div>

        </div>
        <div class="row">
            @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.ProductName)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.Brand.BrandName, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.Brand.BrandName)
            </div>
        </div>

        
    
    </div> <!-- left column -->
    <div class="col-md-6">
        <div class="row">
            @Html.LabelFor(model => model.CoverPath, htmlAttributes: new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DisplayFor(Model => Model.CoverPath)
            </div>
        </div>
        <img src="@Html.DisplayFor(Model => Model.CoverPath)" alt="@Model.ProductName" style="max-height: 100px; max-width:100px; border: 0px solid;" />
    </div> <!-- right column -->
</div> <!-- row -->
@using (Html.BeginForm("Delete", "Products", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.SKU)



    <div class="btn-group">
        @Html.ActionLink("Back to Index", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        <button type="submit" class="btn btn-primary">Delete</button>
    </div>}